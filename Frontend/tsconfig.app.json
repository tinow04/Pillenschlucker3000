{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": true,            // oder false, je nach Bedarf
    "noImplicitAny": false,    // kann helfen, den Fehler zu vermeiden
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    // ... weitere Optionen
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
